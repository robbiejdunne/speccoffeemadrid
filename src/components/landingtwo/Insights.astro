---
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
import Insights from "../entries/Insights.astro";
---

<section>
  <div class="mx-auto 2xl:max-w-7xl md:px-12 px-8 max-w-6xl py-24">
    <div class="border-b pb-5 sm:flex sm:items-end sm:justify-between">
      <h2
        class="text-black font-serif text-4xl lg:text-7xl uppercase font-semibold"
      >
        Insights
      </h2>
      <div class="mt-3 sm:ml-4 sm:mt-0">
        <a href="/" class="text-slate-600 text-lg hover:text-salmon-600"
          >Read all posts &nbsp; â†’</a
        >
      </div>
    </div>
    <div
      class="grid gap-4 grid-cols-1 lg:gap-y-24 sm:grid-cols-2 lg:grid-cols-3 mt-12"
    >
      {
        allPosts
          .slice(0, 3)
          .map((post) => (
            <Insights
              url={"/posts/" + post.slug}
              title={post.data.title}
              description={post.data.description}
              alt={post.data.title}
              pubDate={post.data.pubDate.toString().slice(0, 10)}
              author={post.data.author}
              image={post.data.image.url}
            />
          ))
      }
    </div>
  </div>
</section>
